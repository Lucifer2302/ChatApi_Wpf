<Window x:Class="Chat2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Login"/>
            <TextBox  Name="LoginTb"/>
            <TextBlock Text="Password"/>
            <PasswordBox PasswordChar="1" Name="PassTb"/>
            <Button x:Name="LiginTb" Content="Login" Click="Signin"/>
            <CheckBox Name="SaveCheck" Content="Запомнить меня" IsChecked="True"/>  
        </StackPanel>
        
    </Grid>
</Window>
